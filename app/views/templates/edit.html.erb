<h1>Editing Template</h1>

<%= render 'form' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Atom</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @template.template_parameters.each do |template_parameter| %>
      <tr>
        <td><%= template_parameter.name %></td>
        <td><%= template_parameter.value %></td>
        <td><%= template_parameter.atom_id %></td>
        <td><%= template_parameter.param_type %></td>
        <td><%= link_to 'Show', [@template,template_parameter] %></td>
        <td><%= link_to 'Edit', [:edit, @template, template_parameter] %></td>
        <td><%= link_to 'Destroy', [@template,template_parameter] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
<h2>Add Parameters:</h2>
<%= render 'template_parameters/form' %>

<%= link_to 'Show', @template %> |
<%= link_to 'Back', templates_path %>
